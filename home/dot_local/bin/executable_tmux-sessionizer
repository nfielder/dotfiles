#!/usr/bin/env bash

if [[ $# -eq 1 ]]; then
    selected=$1
else
    projects=$(
        find \
            ~/code \
            -mindepth 2 -type d -name .git -prune |
            sed 's|\(.*\)\/\.git|\1|g'
    )
    selected=$(printf "%s\n" $projects | fzf)
fi

if [[ -z $selected ]]; then
    exit 0
fi

selected_name=$(basename "$selected" | tr '.:' _)
tmux_running=$(pgrep tmux)

if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
    tmux new-session -s $selected_name -c $selected "$EDITOR" \; rename-window editor \; new-window -d -c $selected -n term
    exit 0
fi

if ! tmux has-session -t=$selected_name 2>/dev/null; then
    tmux new-session -ds $selected_name -c $selected "$EDITOR"
    tmux rename-window -t ${selected_name}:1 editor
    tmux new-window -d -t ${selected_name} -c $selected -n term
fi

if [[ -z $TMUX ]]; then
    tmux attach-session -t $selected_name
else
    tmux switch-client -t $selected_name
fi
